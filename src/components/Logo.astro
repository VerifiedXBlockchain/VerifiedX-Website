---
import Image from '~/components/common/Image.astro';

import { SITE } from 'astrowind:config';
const cubeImage = '~/assets/images/cube.gif';
---

<div
  class="self-center relative ml-2 rtl:ml-0 rtl:mr-2 text-2xl font-semibold text-gray-900 whitespace-nowrap dark:text-white logo"
  style="letter-spacing: 0.5px; top: 4px;"
>
  <span class="flex">
    <Image src={cubeImage} alt="VerfiedX" width={40} height={40} class="logo-cube mr-1 relative" style="top: -3px;" />
    Verified<span class="text-primary font-extrabold">X</span>
  </span>
</div>
